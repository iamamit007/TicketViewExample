<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/prof_con"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/im1"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp"
                    app:civ_shadow="false"
                    />
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-5dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_monkee"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp"
                    android:padding="2dp"
                    app:civ_shadow="false"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/prof_con"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/indigo"
                    android:textSize="16sp"
                    android:text="@string/you_are_the_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                   android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_settings"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/p1"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/im2"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="0dp"
                            app:civ_shadow="false" />
                        <ImageView
                            android:layout_marginTop="-16dp"
                            android:layout_alignParentTop="true"
                            android:layout_width="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="35dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_checkmark_blue"
                            />d:src="@drawable/ic_checkmark_blue"
                            />
                    </RelativeLayout>




                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="-18dp"
                    android:layout_toRightOf="@id/p1"
                    android:id="@+id/p2"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/im4"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="0dp"
                            app:civ_shadow="false"
                            />
                        <ImageView
                            android:layout_marginTop="-14dp"
                            android:layout_alignParentTop="true"
                            android:layout_width="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="35dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_checkmark_blue"
                            />
                    </RelativeLayout>




                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="-18dp"

                    android:layout_toRightOf="@id/p2"
                    android:id="@+id/p3"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/im3"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="0dp"
                            app:civ_shadow="false"
                            />
                        <ImageView
                            android:layout_marginTop="-14dp"
                            android:layout_alignParentTop="true"
                            android:layout_width="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="35dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_checkmark_blue"
                            />
                    </RelativeLayout>




                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>